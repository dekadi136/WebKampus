generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum MahasiswaRole {
  korti
  mahasiswa
}

enum StatusDosen {
  aktif
  nonaktif
}

enum StatusMahasiswa {
  aktif
  nonaktif
}

enum StatusTugas {
  ditugaskan
  selesai
}


model Mahasiswa {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  name      String?
  email     String   @unique
  password  String
  status StatusMahasiswa @default(aktif)
  role  MahasiswaRole    @default(mahasiswa)
  mahasiswaBio MahasiswaBio?
  kelas MahasiswaOnKelas[]
  tugas MahasiswaOnTugas[]
  banned BannedMahasiswa?
}

model Dosen {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  name      String?
  email     String   @unique
  password  String
  dosenBio DosenBio?
  kelas Kelas[]
  tugas Tugas[]
}

model DosenBio {
  id Int @id @default(autoincrement())
  createdAt DateTime @default(now())
  nidn String @unique
  status StatusDosen @default(aktif)
  dosenId Int @unique
  dosen Dosen @relation(fields: [dosenId], references: [id], onDelete: Cascade)
}

model MahasiswaBio {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  nim       String   @unique
  jurusan   String
  angkatan  String
  mahasiswaId    Int @unique
  mahasiswa Mahasiswa @relation(fields: [mahasiswaId], references: [id], onDelete: Cascade)
}

model MataKuliah{
  id Int @id @default(autoincrement())
  createdAt DateTime @default(now())
  name String @unique
  sks String
  kelas Kelas[]
  tugas Tugas[]
}
  
model Kelas {
  id Int @id @default(autoincrement())
  createdAt DateTime @default(now())
  ruangan String
  hari String
  jam String
  dosenId Int 
  dosen Dosen @relation(fields: [dosenId], references: [id], onDelete: Cascade)
  mataKuliahId Int 
  mataKuliah MataKuliah @relation(fields: [mataKuliahId], references: [id], onDelete: Cascade)
  mahasiswa MahasiswaOnKelas[]
}

model Tugas {
  id Int @id @default(autoincrement())
  createdAt DateTime @default(now())
  name String
  jadwal String
  status StatusTugas @default(ditugaskan)
  dosenId Int 
  dosen Dosen @relation(fields: [dosenId], references: [id], onDelete: Cascade)
  mataKuliahId Int
  mataKuliah MataKuliah @relation(fields: [mataKuliahId], references: [id], onDelete: Cascade)
  mahasiswa MahasiswaOnTugas[]
}

model MahasiswaOnKelas {
  id Int @id @default(autoincrement())
  createAt DateTime @default(now())
  mahasiswaId Int
  kelasId Int 
  mahasiswa Mahasiswa @relation(fields: [mahasiswaId], references: [id], onDelete: Cascade)
  kelas Kelas @relation(fields: [kelasId], references: [id], onDelete: Cascade)
}

model MahasiswaOnTugas {
  id Int @id @default(autoincrement())
  createAt DateTime @default(now())
  status StatusTugas? 
  nilai Int?
  filePath String?
  mahasiswaId Int
  tugasId Int
  mahasiswa Mahasiswa @relation(fields: [mahasiswaId], references: [id], onDelete: Cascade)
  tugas Tugas @relation(fields: [tugasId], references: [id], onDelete: Cascade)
}

model BannedMahasiswa {
  id Int @id @default(autoincrement())
  createAt DateTime @default(now())
  alasan String
  bannedById Int
  bannedByType String
  mahasiswaId Int @unique
  mahasiswa Mahasiswa @relation(fields: [mahasiswaId], references: [id], onDelete: Cascade)
}
